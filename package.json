{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "nodemon --watch src --exec 'npm run build && firebase emulators:start' --signal SIGTERM",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run serve",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "npm run build && firebase emulators:start"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@nestjs/common": "^9.3.11",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.3.11",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^9.3.11",
    "@nestjs/testing": "^9.3.11",
    "@types/firebase": "^3.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "express": "^4.18.2",
    "firebase": "^9.18.0",
    "firebase-admin": "^11.5.0",
    "firebase-app": "^0.0.1",
    "firebase-functions": "^4.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "firebase-functions-test": "^3.0.0",
    "nodemon": "^2.0.22",
    "typescript": "^4.9.0"
  },
  "private": true
}
